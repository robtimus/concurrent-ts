{
  "name": "@robtimus/concurrent",
  "version": "0.1.0",
  "description": "Utility classes commonly useful in concurrent programming",
  "homepage": "https://github.com/robtimus/concurrent-ts",
  "bugs": {
    "url": "https://github.com/robtimus/concurrent-ts/issues"
  },
  "license": "Apache-2.0",
  "author": "Rob Spoor",
  "files": [
    "dst"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robtimus/concurrent-ts.git"
  },
  "scripts": {
    "compile": "tsc",
    "lint": "eslint ./src/**",
    "format": "prettier --write \"**/*.+(json|ts|tsx)\"",
    "format:check": "prettier --check \"**/*.+(json|ts|tsx)\"",
    "build": "npm run format:check && npm run lint && npm run compile",
    "typedoc": "typedoc",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^16.18.68",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 180
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
